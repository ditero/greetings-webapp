<!-- INPUT DATA  -->

<form class="text-center" action="/greetings" method="post">
  <input type="text" class="form-control tex-center" name="user" placeholder="Type your name here">
  <h2 id="keepTrk" class="panel-primary" name='greetCount' value=0>{{countGreeted}}</h2>

  <div class="text-center">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary">
    <input type="radio" name="selectedRadio" id="option1" name="selectedRadio" value="Hello">English
  </label>
      <label class="btn btn-primary">
    <input type="radio" name="selectedRadio" id="option2" name="selectedRadio" value="Goe more"> Afrikaans
  </label>
      <label class="btn btn-primary">
    <input type="radio" name="selectedRadio" id="option3" name="selectedRadio" value="Molo"> IsiXhosa
  </label>
    </div>
  </div>

  <div class="2btn-group">
    <input type="submit" class="btn btn-success text-center" value="Greet Me">
    <a href="/greeted"><input class="btn btn-success text-center" value="View greeted Names"></a>
  </div>

</form>

{{#if messages.error }}
  <div class="error text-center">
    {{messages.error}}
  </div>
{{/if}}

{{#if output}}
  <p class="text-center">{{output}}</p>
{{/if}}
